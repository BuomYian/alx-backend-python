#!/bin/bash

# A simple script to start a Minikube Kubernetes cluster,
# verify it is running, and list available pods.

set -e

echo "Checking if Minikube is intstalled..."
if ! command -v minikube &> /dev/null
then
    echo "Minikube could not be found, please install it first."
    exit 1
fi

echo "Starting Minikube cluster..."
minikube start

echo "Verifying Kubernetes cluster status..."
kubectl cluster-info

echo "Retrieving available pods in the cluster..."
kubectl get pods --all-namespaces

echo "Done! Kubernetes cluster is up and running."
